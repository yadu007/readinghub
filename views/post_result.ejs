    // //   console.log(data);
      
    // })
 
    var page = <%-JSON.stringify(page)%>;
    var total = <%-JSON.stringify(total)%>;

    $('.post-tble-pagination').bootpag({
        total: Math.ceil(total / 10),
        page: page
    }).on("page", function (event, num) {
        get_posts(num);
    });
    $('.pagination li').addClass('page-item');
    $('.pagination a').addClass('page-link');
</script>